= form_with model: @tracks do |f|
  .text-field
    = f.label :name
    = f.text_field :name
  
  .text-area-field
    = f.label :credits
    = f.text_area :credits
  
  .date-field
    = f.label :formed_at
    = f.date_field :formed_at
  
  .file-field
    = f.label :avatar
    = f.file_field :avatar
  
  .file-field
    = f.label :cover_photo
    = f.file_field :cover_photo
  %br/
  = f.submit

= link_to tracks_path do
  Back to index