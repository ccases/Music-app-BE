
-# NAV BAR COMPONENT
.nav-bar
  .page-title
    Music on 
    .color-change= "&nbsp;Rails".html_safe
  .nav-links
    .nav-bar-link= link_to "Artists", artists_path
    .nav-bar-link= link_to "Albums", albums_path
    .nav-bar-link.active= link_to "Tracks", tracks_path

.nav-bar-filler

-# NAV BAR COMPONENT END

%h1 All tracks


= link_to "Add track", new_track_path
.table
  .table-header.cols-5
    .header
      %p Title
    .header
      %p Artist
    .header
      %p Album
    .header
      %p Duration
    .header
      %p Actions
  - @tracks.each do |track|
    .table-row.cols-5
      .table-cell
        .list-thumbnail
          =image_tag "defaults/album.jpg", size:"50x50"
        %p= track.name
      .table-cell
        %p Artist PH
      .table-cell
        %p Album PH
      .table-cell
        %p Duration PH
      .table-cell
        %p= link_to "Edit", edit_track_path(track.id)
        %p= link_to "Destroy", track_path(track), method: :delete, data: {confirm: "Are you sure?"}